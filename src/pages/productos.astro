---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Productos - Cajas Ordenadoras" description="Catálogo completo de organizadores">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Nuestros Productos
      </h1>
      <p class="text-xl text-blue-100">
        Organizadores de calidad para cada espacio de tu hogar
      </p>
    </div>
  </section>

  <!-- Grid de productos -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Estado de carga -->
    <div id="loading" class="text-center py-12">
      <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
      <p class="text-gray-600 mt-4">Cargando productos...</p>
    </div>

    <!-- Contador de productos -->
    <div id="product-count" class="mb-8 hidden">
      <p class="text-gray-600">
        <span id="count-number">0</span> productos disponibles
      </p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 hidden" id="products-grid">
      <!-- Los productos se cargan dinámicamente aquí -->
    </div>

    <!-- Mensaje cuando no hay productos -->
    <div id="no-products" class="hidden text-center py-12">
      <div class="text-gray-400 mb-4">
        <svg class="w-24 h-24 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-700 mb-2">
        No hay productos disponibles
      </h3>
      <p class="text-gray-500">
        Estamos actualizando nuestro catálogo
      </p>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="bg-blue-50 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        ¿Querés comprar al por mayor?
      </h2>
      <p class="text-xl text-gray-600 mb-8">
        Tenemos precios especiales para revendedores
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/mayoristas" 
          class="bg-blue-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-blue-700 transition inline-block"
        >
          Ver Información Mayorista
        </a>
        <a 
          href="https://api.whatsapp.com/send?phone=5491140461603&text=Hola!%20Quiero%20consultar%20sobre%20venta%20mayorista"
          target="_blank"
          class="bg-green-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-green-700 transition inline-block"
        >
          Consultar por WhatsApp
        </a>
      </div>
    </div>
  </section>

  <script>
    import { supabase } from '../lib/supabase.js';

    async function cargarProductos() {
      const loading = document.getElementById('loading');
      const productsGrid = document.getElementById('products-grid');
      const noProducts = document.getElementById('no-products');
      const productCount = document.getElementById('product-count');
      const countNumber = document.getElementById('count-number');

      // Mostrar loading
      loading?.classList.remove('hidden');
      productsGrid?.classList.add('hidden');
      noProducts?.classList.add('hidden');
      productCount?.classList.add('hidden');

      // Obtener productos de Supabase
      const { data: productos, error } = await supabase
        .from('productos_tienda')
        .select('*')
        .order('created_at', { ascending: false });

      // Ocultar loading
      loading?.classList.add('hidden');

      if (error) {
        console.error('Error al cargar productos:', error);
        noProducts?.classList.remove('hidden');
        return;
      }

      if (!productos || productos.length === 0) {
        noProducts?.classList.remove('hidden');
        return;
      }

      // Mostrar contador
      if (countNumber) countNumber.textContent = productos.length.toString();
      productCount?.classList.remove('hidden');

      // Generar HTML de productos
      if (productsGrid) {
        productsGrid.innerHTML = productos.map(producto => `
          <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 group">
            <!-- Imagen -->
            <div class="h-64 bg-gray-100 overflow-hidden">
              <img 
                src="${producto.foto}" 
                alt="${producto.titulo}"
                class="w-full h-full object-cover group-hover:scale-110 transition duration-500"
                onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22400%22 height=%22400%22%3E%3Crect fill=%22%23e5e7eb%22 width=%22400%22 height=%22400%22/%3E%3Ctext fill=%22%239ca3af%22 font-family=%22sans-serif%22 font-size=%2220%22 text-anchor=%22middle%22 x=%22200%22 y=%22200%22%3ESin imagen%3C/text%3E%3C/svg%3E'"
              />
            </div>

            <!-- Contenido -->
            <div class="p-5">
              <!-- Nombre -->
              <h3 class="text-lg font-semibold text-gray-900 mb-4">
                ${producto.titulo}
              </h3>

              <!-- Precio -->
              <div class="mb-4">
                <div class="flex items-baseline gap-2">
                  <span class="text-2xl font-bold text-gray-900">
                    $${producto.precio?.toLocaleString('es-AR') || '0'}
                  </span>
                  <span class="text-sm text-gray-500">c/u</span>
                </div>
              </div>

              <!-- Botón WhatsApp -->
              <a 
                href="https://api.whatsapp.com/send?phone=5491140461603&text=Hola!%20Quiero%20consultar%20sobre:%20${encodeURIComponent(producto.titulo)}%20-%20Precio:%20$${producto.precio}"
                target="_blank"
                class="block w-full bg-green-600 text-white text-center py-3 rounded-lg font-semibold hover:bg-green-700 transition"
              >
                Consultar por WhatsApp
              </a>
            </div>
          </div>
        `).join('');

        productsGrid.classList.remove('hidden');
      }
    }

    // Cargar productos al cargar la página
    cargarProductos();
  </script>
</Layout>